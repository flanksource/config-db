        "text": {
          "type": "string"
        },
        "label": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "LocationOrAlias": {
      "properties": {
        "type": {
          "type": "string"
        },
        "filter": {
          "type": "string"
        },
        "values": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "withParent": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
