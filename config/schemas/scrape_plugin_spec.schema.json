        },
        "external_id": {
          "$ref": "#/$defs/Lookup"
        },
        "name": {
          "$ref": "#/$defs/Lookup"
        },
        "namespace": {
          "$ref": "#/$defs/Lookup"
        },
        "type": {
          "$ref": "#/$defs/Lookup"
        },
        "agent": {
          "$ref": "#/$defs/Lookup"
        },
        "scope": {
          "$ref": "#/$defs/Lookup"
        },
