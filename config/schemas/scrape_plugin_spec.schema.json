        "tooltip": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        },
        "headline": {
          "type": "boolean"
        },
        "hidden": {
          "type": "boolean"
        },
        "text": {
          "type": "string"
        },
        "value": {
          "type": "integer"
        },
        "unit": {
          "type": "string"
        },
        "max": {
          "type": "integer"
        },
        "min": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        },
        "lastTransition": {
          "type": "string"
        },
        "links": {
          "items": {
            "$ref": "#/$defs/Link"
